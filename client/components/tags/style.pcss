@import 'style/vars/vars.pcss';



.tags-container {
  display: block;
  position: relative;
  width: 100%;
  float: left;
  box-sizing: border-box;
  overflow-x: hidden;

  &-open {
    .tags {
      height: auto;
      overflow-y: auto;
      display: block;
      width: 100%;
      float: left;
      margin-left: 20px;
      border-bottom: 3px solid white;
      @media(--mobile) {
        margin-left: 0px;
      }
    }
  }
   .tags {
    display: block;
    width: 100%;
    float: left;
    margin-left: 20px;
    overflow: hidden;

    @media(--mobile) {
      margin-left: 0px;
      margin-top: 2px;
      overflow-y: scroll;
    }
  }

  .product_tags{

    @media(--mobile) {
      height: auto !important;
      max-height: initial !important;
    }
  }

  .tag {
    font-family: $font__family__light;
    color: $color__blue;
    width: auto;
    display: block;
    float: left;
    box-sizing: content-box !important;
    border: 1px solid $color__blue;
    border-radius: 5px;
    cursor: pointer;
    text-align: center;
    height: 32px;
    padding-right: 20px;
    padding-left: 20px;
    &:hover {
      background: $color__blue;
      .text {
        color: $color__white;
      }
      .close {
        color: $color__white;
      }
    }
    @media(--mobile) {
      height: 63px;
      margin-left: 1px;
      padding-right: 22.5px;
      padding-left: 22.5px;
      margin-right: 12px !important;
    }


    &-active {
      background: $color__green;
      .text {
        color: $color__white;
        display: inline-block;
        font-family: $font__family;
        height: 34px;
        line-height: 29px;
        font-size: 22px;
        cursor: pointer;
        text-transform: uppercase;
        padding-top: 3px;
        font-family: $font__family__light;
        @media(--mobile) {
          font-size: 28px;
          height: 43px;
          line-height: 36px;
          padding-top: 14px;
        }
      }
      .close {
        text-align:right;
        padding-left:5px;
        width: 20px;
        font-size: .83rem;
        color: $color__white;
        cursor: pointer;
        display: inline-block;
        @media(--mobile) {
          font-size: 1.3rem;
        }
      }
    }

  }

  .text {
    width: auto;
    display: inline-block;
    font-family: $font__family;
    color: $color__green;
    height: 34px;
    line-height: 29px;
    font-size: 22px;
    cursor: pointer;
    text-transform: uppercase;
    padding-top: 3px;
    font-family: $font__family__light;
    @media(--mobile) {
      font-size: 28px;
      height: 43px;
      line-height: 36px;
      padding-top: 14px;
      padding-right: 0px;
    }

  }

  .button {
    position: absolute;
    height: 22px;
    right: 0;
    bottom: 0;
    left: 20px;
    display: block;
    background-color: white;
    color: $color__gray-light;
    text-align: center;
    line-height: 22px;
    cursor: pointer;
    &:after {
      display: inline-block;
      width: 40px;
      height: 7px;
      border-radius: 100px;
      background-color: $color__gray;
      content: '';

      @media(--mobile) {
        width: 50px;
        height: 10px;
      }
    }
  }

  .close {

    font-size: $font__size;
    color: $color__green;
    cursor: pointer;
    display: inline;

  }

  .pending{
    position: absolute;
    width: calc(100% - 20px);
    height: 100%;
    left: 20px;
  }

  ::-webkit-scrollbar {
    -webkit-appearance: none;
    width: 6px;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 4px;
    background-color: rgba(0,0,0,.5);
    -webkit-box-shadow: 0 0 1px rgba(255,255,255,.5);
  }

}


