@import 'style/vars/vars.pcss';


.fademonetization-enter-active, .fademonetization-leave-active {
  transition: opacity .2s
}
.fademonetization-enter, .fademonetization-leave-to /* .fade-leave-active in <2.1.8 */ {
  opacity: 0
}

$space_beetwen: 40px;

.monetization{

  @media (--overtablet){
    height: 100%;
  }
  background-color: $color__brand-dark;
  font-family: $font__family__light;
  color: #fff;
  text-align: center;

  .scroll-help-block {
    display: none;
    @media (--mobile){
      display: block;
      height: 150px;
    }
  }

  &__wrap{

    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    //padding-right: 73px;
    margin: 0 auto;
    @media (--tabletandless) {

      width: 975px;
      display: block;
      width: auto;
      padding: 40px 0px 0px 0px;
    }
    @media (--overtablet){
      height: 100%;
      display: block;
      width: 100%;
      //padding-top: 3%;
    }
  }
  &__about{
    ul {
      max-width: 600px;
      margin: 0 auto;
      transform: translateX(6.6%);
      list-style: initial;
      text-align: left;
      font-size: $font__normal;
      font-family: $font__family__light;
      @media (--mobile) {

        font-size: $font__medium;
        margin-top: -25px;
      }
      margin-top: -10px;
      margin-bottom: 30px;
    }

  }
  &__plans{
    @media (--overtablet) {
      margin-left:  $space_beetwen;
      display: inline-block;
      width: 620px;
      vertical-align: middle;
      //margin-right: -50px;
      //position: fixed 50% 25% * *;
      //transform: translate(25%,-50%);
    }
    p.rate-title {
      font-size: $font__medium;
      padding-bottom: 20px;
      margin-top: 36px;

      @media (--overtablet){
        font-size: $font__normal;
        margin-top: 0px;

      }
    }

  }

  i.question {
    cursor: pointer;
    display: inline-block;
    line-height: 50px;
    border-radius: 50%;
    color: white;
    border: 2px solid white;
    size: 55px;
    font-size: $font__medium;


    position: fixed 22px * * 22px;

    @media (--overtablet) {
      top: 17px;
      left: 17px;
      font-size: $font__normal;
      size: 40px;
      line-height: 35px;
    }

  }

  .ic-close{
    position: fixed 10px 10px * *;
    z-index: 210;
    padding: 15px;
    color: white;
    cursor: pointer;
    font-size: $font__normal;
    size: $font__normal;
    box-sizing: content-box;
    @media ( --tabletandless ) {
      top: 15px;
      right: 15px;
      size: $font__medium;
      font-size: $font__medium;
    }
  }
  &__fake-block {
    display: none;
    @media (--overtablet) {
      display: inline-block;
      width: 1px;
      height: 100%;
      vertical-align: middle;
    }
  }
  &__days-block{

    @media (--overtablet){
      display: inline-block;
      vertical-align: middle;
      margin-right: $space_beetwen;
      //position: fixed;
      //padding-top:80px;
      //top: 50%;
      //transform: translate(-21%,-50%);
      //left: 21%;
    }
  }

  .end-txt{
    padding-top: 10px;
      @media (--tabletandless) {
        padding-top: 0px;
      }
    @media (--overtablet) {
      .monetization__about {
        margin-left: 30px;
      }

    }
  }

  &__days-to-end{
    font-size: 100px;

    @media (--overtablet){
      padding: 50px;
      span {
        font-size: 50px;
        i {
          line-height: 150px;
        }
      }
    }
    &.active-plan {
      @media (--overtablet){
        padding-bottom: 0;
        padding-top: 0;
        font-size: initial;
        button {
          margin-top: 20px;
        }
      }
    }

    &.red_none {
      color: $color__red__true !important;
    }

    &.is__end {
      color: #FFDE1E;
    }
    @media (--tabletandless) {
      position: absolute;
      left: 0;
      right: 0;
      top: -15px;
      margin: 0 auto;
      font-size: 150px;
      padding-top: 50px;
      padding-bottom: 50px;
    }
  }

  &__text{
    font-size: 24px;
    @media (--tabletandless) {
      font-size: 36px;
      width: 490px;
      margin: 195px auto 0px auto;
    }

    @media (--overtablet) {
      margin-bottom: 30px;
    }


    &.help {
      @media (--overtablet){
        margin-top: 24px;
        &.active-plan {
          margin-bottom: 0;
        }
      }
      margin-top: 36px;
      width: 100%;
    }
  }
  .bot{
    font-size: 40px;
    @media (--tabletandless) {
      font-size: 36px;
      margin-top: 36px;
      margin-bottom: 17px;

    }
  }

  .zero-days{
    @media (--tabletandless) {
      margin-top: 25px;
    }
  }

  &__btn button{
    cursor: pointer;
    width: 420px;
    height: 60px;
    background-color: transparent;
    border: 1px solid #fff;
    border-radius: 5px;
    color: #fff;
    margin-bottom: 20px;

    &:hover {
      background-color: $color__brand;
      border: none;
    }

      @media (--tabletandless) {
        width: 490px;
        height: 118px;
        margin-bottom: 30px;
      }

    .plan-name i.ic-currency-rub {
      line-height: 36px;
      @media (--overtablet){
        line-height: 26px;
      }
    }

    i.ic-currency-rub {
      line-height: 30px;
      @media (--overtablet){
        line-height: 17px;
      }
    }

    .bold {
      font-family: $font__family__semibold;
      font-size: 24px;
      @media (--tabletandless) {
        font-size: 36px;
      }

      i.ic-rub{
        display: inline-block;
        font-size: 17px;
        padding-top: 6px;
        padding-left: 3px;
        @media (--tabletandless) {
          font-size: 24px;
          padding-top: 10px;
        }
        @media (--overtablet) {
          line-height: 20px;
        }
      }
    }

    .light{
      font-family: $font__family__light;
      font-size: 16px;
        @media (--tabletandless) {
          font-size: 28px;
        }

        i.ic-rub{
          padding-top: 3px;
          padding-left: 3px;
          font-size: 12px;
            @media (--tabletandless) {
              padding-top: 7px;
              font-size: 20px;
            }
        }
    }
    &.make__choice{
      background-color: $color__brand;
      border-color: $color__brand;
    }
  }

  .first{
    padding-top: 23px;
      @media (--tabletandless) {
        padding-top: 0px;
      }
  }

  &__i.ic-monetization-icon{
    margin-top: 5px;
    font-size: 25px;
    margin-bottom: 25px;
    @media (--tabletandless){
      margin-top: initial;
      font-size: 50px;
      margin-bottom: 55px;
    }
  }

  &__accept-btn {

    &.dark__yellow {
      button {
        background-color: #DEBD00;
      }
    }

  }


  &__zero-days-link{
    a{
      font-size: $font__medium;
      font-family: $font__family__light;
      opacity: .5;
      color: $color__white;
      margin-top: 5px;
      text-decoration: none;
      cursor: pointer;
      span {
        border-bottom: 2px solid rgba(255, 255, 255, .5);
      }
      @media (--overtablet) {
        padding-top: 5px;
        font-size: $font__normal;
      }
    }
  }

  &__accept-btn button{
    cursor: pointer;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100px;
    line-height: 50px;
    color: #12302D;
    background-color: #FFDE1E;
    font-size: 36px;
    font-family: $font__family__light;
    border: none;
    z-index: 220;



    &:hover{
      background-color: #DEBD00;
    }

    &.red_none {
      background: $color__red__true;
      color: white;
    }

    @media screen and (min-width: 751px){
      position: relative;
      width: 420px;
      height: 77px;
      border-radius: 5px;
      border: none;
      font-size: 24px;
    }
  }
}
