#profile

  header-component(:title='getUserName',
    :left-btn-show='isSelfPage ? false : true',
    :back-function='backArrow').directbot-header

      div.profile-right-menu(slot="content", v-if="isMobile && isSelfPage")

        i.ic-options_menu(@click.stop="showProfileMenu = true")

      div.profile-days(slot="content" v-if="isSelfPage && monetizationDays !== null" @click="daysclick")
        span {{ monetizationDays }}
        span.day д

      phone-component(slot="center-content", v-if="!isSelfPage", :phone="shoptel")

      right-nav-component(  slot="content" current="profile" v-on:open-profile-menu="showProfileMenu = true")
      //-div.profile-cash(
        slot='content',
        v-if="isSelfPage && user.plan_id && monetizationDays === 0",
        @click="monetizationAction")
        img(src="./icons/wallet.png")



  menu-sample.prof-menu(:opened="showProfileMenu", v-on:close="showProfileMenu = false")
    .item(v-if="botActivity")
      .text Отключить бота
    .item(v-if="isMobile")
      .text(@click.stop="findBloger") Найти блогера
    .item
      .text(@click.stop="supportChat") Поддержка
    .item
      .text(@click.stop="$router.push({ name: 'popup',params: { id:'conditions'} } )") Условия
    .item
      .text.__txt-red(@click.stop="logout") Выход
    .item
      .text.__txt-blue Отмена






  .fake-top-standalone(v-if="isStandalone")
  .section.top.bottom.db-bottom
    .section__content(v-cloak)

      .profile

        .profile_info

          .profile_info_img(:class="{'no-hidden': !getUserPhoto && !isTrendever && isSelfPage }")
            img(:src="getUserPhoto")
            img.bot-mini(src="./img/bot-mini.svg" v-if="isSelfPage && !getUserPhoto && !isTrendever")


          .profile_info_about(v-if="user.location && user.products_count")
            span.profile_info_about_type(v-if="shopabout")
              | {{ shopabout }} &nbsp
            span.profile_info_about_location(v-if="shoplocation")
              | {{ shoplocation}}&nbsp&nbsp
              span(v-if="!isMobile && user.working_time") |&nbsp
            span.profile_info_about_work-time(v-if="user.working_time")
              |  {{ shoptime }}&nbsp
              //-span(v-if="!isMobile") |&nbsp
            //-span.profile_info_about_posts-quantity
              |  {{ user.products_count }} {{productsCountTitle}}


        .profile-buttons(v-if="isAuth && isSelfPage")

          template(v-if="!isTrendever")
            .text-box(v-if="!isMobile && botActivity")
              p.bold Активирован ... #[br]
              p.light(v-if="!postsCount") нет активных постов, ожидаю..
              p.light(v-if="postsCount")
                span Добавлено {{  postsCount }} {{postsCountTitle}} #[br]
                span(v-if="chatsCount") Создано {{ chatsCount }} чатов

            button.connect.no-mob(v-if="!botActivity",
                @click="$router.push({name: 'connect-bot'})") ПОДКЛЮЧИТЬ INSTAGRAM
            template(v-if="isAuth")
              button(@click="findBloger") НАЙТИ БЛОГЕРА
              button.no-desk(@click="supportChat") ПОДДЕРЖКА


          template(v-if="isTrendever")
            button.connect.no-mob Подключить бизнес



        //-v-if="longcaption"
        .profile_desc(v-on:click="isMoreClass = !isMoreClass",
          v-bind:class="{ more : isMoreClass, less: !isMoreClass}")
          .profile_desc_t(v-if="getSlogan") {{ getSlogan }}
          .profile_desc_caption(v-if="getUserCaption" v-html="caption_spaces(getUserCaption)")

          .shipping_rules(v-if="user.shipping_rules")
            .profile_desc_t Условия
            .profile_desc_caption {{ user.shipping_rules }}


        //-.profile_desc(v-else :class="less")
          .profile_desc_t(v-if="getSlogan") {{ getSlogan }}
          .profile_desc_caption(v-if="getUserCaption" v-html="caption_spaces(getUserCaption)")

          .shipping_rules(v-if="user.shipping_rules")
            .profile_desc_t Условия
            .profile_desc_caption {{ user.shipping_rules }}


          //-button() АНАЛИТИКА


      template(v-if="loaded && isSelfPage")


        template(v-if="!isTrendever")

          //-.profile_inactive(v-if="!botActivity")
            img(src="./img/empty-directbot-profile.png")
            span.empty Деактивирован
            span(v-if="false") мониторю {{ postsCount  }}  постов #[br] общаюсь в {{ chatsCount }} чатах

          .profile_active(v-if="botActivity")
            img(src="./img/active-directbot-profile.png", v-if="isMobile")
            //-img(src="./img/Directbot_profile_bot-on.svg", v-if="!isMobile")
            .text-box(v-if="isMobile")
              p.bold Активирован ... #[br]
              p.light(v-if="!postsCount") нет активных постов, ожидаю..
              p.light(v-if="postsCount")
                span Добавлено {{  postsCount }} {{postsCountTitle}} #[br]
                span(v-if="chatsCount") Создано {{ chatsCount }} чатов

          .grey-banner(v-if="!botActivity && getBannerInfo.indexOf('profile-banner') === -1 && !hideGrey")
            i.ic-close(@click="$store.dispatch('closeStat', 'profile-banner')")
            | После подключения сюда начнут#[br.mobile]
            | добавляться фото#[br.desktop] из вашего&nbsp
            span Instagram.&nbsp#[br.mobile]
            | Это может занять несколько#[br.desktop] минут или часов,#[br.mobile]
            | в зависимости от вашей активности

        template(v-if="isTrendever")
          .grey-banner(v-if="getBannerInfo.indexOf('profile-banner') === -1 && !hideGrey",
            :class="{'has-chats': botActivity}")
            i.ic-close(@click="$store.dispatch('closeStat', 'profile-banner')")
            span Нажмите Сохранить&nbsp
            | под товаром#[br]
            | или&nbsp
            span напишите @savetrend&nbsp
            | под постом в#[br]
            | Instagram, чтобы добавить тренд сюда в ленту



          //-.profile_no-goods-banner(v-if="!botActivity && getBannerInfo.indexOf('profile-banner') === -1 && !hideGrey")
            i.ic-close(@click="$store.dispatch('closeStat', 'profile-banner')")
            br(v-if="isMobile")
            span После подключения к Instagram,#[br]
            span.save оператор начнет мониторить все посты, #[br]
            span отвечать покупателям и добавлять сюда товары


      .profile_insta-link(v-if="isMobile", :class="{'change-padding': !isSelfPage, directbot: !isTrendever}")
        .insta-link-text
          template(v-if="isTrendever") ссылка на эту витрину
          template(v-if="!isTrendever") Cсылка сюда&nbsp
        .insta-link(ref="instaLink") {{ getUserNameLinked }}.{{ source }}
        native-popup(:show-popup="showCopyMessage")
          .title-text.title-font Ссылка скопирована
          .main-text {{copyMessage}}
          .button-text(v-on:click.stop="showCopyMessage = false")
            span OK


      connect-button(v-if="isSelfPage && isMobile && !botActivity")

        //-button.bot-active-btn(v-if="false") БОТ АКТИВЕН
          i.ic-close

  photos(:shopId="supplierProfileID || userShopId || anotherId", :listName="listId")

  .directbot-navbar(v-if="isMobile && isAuth", :class="{'hide-nav': hideNavUser }")
    navbar-component(current='profile')
